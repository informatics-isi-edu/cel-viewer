library(gplots)
library(ape)
space = as.matrix(read.csv("\\data.csv", sep = ",", row.names = 1))
tree = read.tree("\\cluster.newick")
tClstr = as.hclust(tree)
rowDen = as.dendrogram(tClstr)
png(filename = "\\heatmap.png", width = 747, height = 623, units = "px",
 bg = "transparent")
heatmap.2(space, main = "my Heatmap", xlab = "Samples", ylab = "Regions" ,
 Rowv = rowDen, colv = FALSE, dendrogram = "row")
dev.off()


